		pessoa1.setNome("Marcos");
		
		pessoa1.setDataNasc(simpleDate.parse("24-08-1995"));
		
		pessoaService.salvar(pessoa1);
		Assert.assertNotNull("ID do Itau n√£o pode ser NULL",pessoa1.getId());
		
		
		
	}
	
