public class PessoaTeste {
	@Test
	public void SalvarPessoaTeste() throws ParseException{
		SimpleDateFormat simpleDate =  new SimpleDateFormat("dd-MM-yyyy"); 

		PessoaService pessoaService = new PessoaService();
